<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearlayout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_book"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/banner2"
            app:strokeColor="#DCDCDC"
            app:strokeWidth="1dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/nameBookLike"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="3dp"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans_regular"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="13dp"
            android:text="jdjdjjjdjdjđjdjdjdjdjd"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />

    </LinearLayout>


    <View
        android:id="@+id/view3"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:background="#32000000"
        android:layout_marginTop="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearlayout_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearlayout_main"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="3dp"
        android:paddingBottom="5dp"
        android:text="❤️"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>