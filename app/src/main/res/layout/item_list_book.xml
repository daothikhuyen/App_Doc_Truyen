<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/rank_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/top1" />

                <TextView
                    android:id="@+id/rank_number"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="#8c8c8c"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgBook"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:shapeAppearanceOverlay="@style/circular"
                app:srcCompat="@drawable/nu_cuong"
                app:strokeColor="#DCDCDC"
                app:strokeWidth="1dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Product Name"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:fontFamily="@font/opensans_regular"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Tam Ká»³"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rattingLove"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/cardView3"
        tools:ignore="MissingConstraints"
        android:visibility="visible"
        tools:layout_editor_absoluteX="3dp">

        <TextView
            android:id="@+id/number_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:padding="3dp"
            android:fontFamily="@font/opensans_regular"
            android:text="123"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/drawable_tym" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rattingWatch"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/cardView3"
        tools:ignore="MissingConstraints"
        android:visibility="gone"
        tools:layout_editor_absoluteX="3dp">

        <TextView
            android:id="@+id/number_reads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:padding="3dp"
            android:fontFamily="@font/opensans_regular"
            android:text="123"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/baseline_remove_red_eye_24" />

    </LinearLayout>

    <View
        android:id="@+id/view_hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#46A2A0A0"
        app:layout_constraintBottom_toBottomOf="@+id/cardView3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>